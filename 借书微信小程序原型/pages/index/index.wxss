/**index.wxss**/
.content{
  width: 96%;
  margin: 2%; 
  text-align: justify; 
}  
.item{
  background-color: #fff;
  width: 100%;
  height: 400rpx;
  margin: 1%; 
  margin-bottom: 20rpx;
  display: inline-block;
}
.item .item-img{
  width: 100%;
  height: 100%;
}
.left,.right{
  display: inline-block;
  vertical-align: center;
  width: 48%;
}
.right{
  float: right;
}

.loading{  
  padding: 10rpx;  
  text-align: center;  
} 


.label_title {
  font-size: 24rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;
  margin: 5rpx;
  line-height: 30rpx;
}

.label_time {
    font-size: 70%;
    color: #ef3b51;
    padding-left: 10rpx;
}
